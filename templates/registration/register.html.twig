{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 flex items-center justify-center">
    <div class="max-w-lg w-full bg-white p-8 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold text-gray-900 mb-6 text-center">Cr√©er un compte</h1>

        <!-- Messages d'erreur (flash) -->
        {% for message in app.flashes('error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(registrationForm, { 'attr': { 'class': 'space-y-6' } }) }}

        <!-- Username -->
        <div class="relative z-0 w-full group">
            {{ form_widget(registrationForm.username, { 'attr': { 'class': 'block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600 peer', 'placeholder': ' ' } }) }}
            {{ form_label(registrationForm.username, null, { 'label_attr': { 'class': 'peer-focus:font-medium absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6' } }) }}
            {% if form_errors(registrationForm.username) %}
                <p class="text-sm text-red-500 mt-1">{{ form_errors(registrationForm.username) }}</p>
            {% endif %}
        </div>

        <!-- Email -->
        <div class="relative z-0 w-full group">
            {{ form_widget(registrationForm.email, { 'attr': { 'class': 'block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600 peer', 'placeholder': ' ' } }) }}
            {{ form_label(registrationForm.email, null, { 'label_attr': { 'class': 'peer-focus:font-medium absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6' } }) }}
            {% if form_errors(registrationForm.email) %}
                <p class="text-sm text-red-500 mt-1">{{ form_errors(registrationForm.email) }}</p>
            {% endif %}
        </div>

        <!-- Password -->
        <div class="relative z-0 w-full group">
            {{ form_widget(registrationForm.password.first, { 'attr': { 'class': 'block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600 peer', 'placeholder': ' ' } }) }}
            {{ form_label(registrationForm.password.first, null, { 'label_attr': { 'class': 'peer-focus:font-medium absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6' } }) }}
            {% if form_errors(registrationForm.password.first) %}
                <p class="text-sm text-red-500 mt-1">{{ form_errors(registrationForm.password.first) }}</p>
            {% endif %}
        </div>

        <!-- Repeat Password -->
        <div class="relative z-0 w-full group">
            {{ form_widget(registrationForm.password.second, { 'attr': { 'class': 'block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600 peer', 'placeholder': ' ' } }) }}
            {{ form_label(registrationForm.password.second, null, { 'label_attr': { 'class': 'peer-focus:font-medium absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6' } }) }}
            {% if form_errors(registrationForm.password.second) %}
                <p class="text-sm text-red-500 mt-1">{{ form_errors(registrationForm.password.second) }}</p>
            {% endif %}
        </div>

        <!-- Submit Button -->
        <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full px-5 py-2.5 text-center">
            S'inscrire
        </button>

        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
