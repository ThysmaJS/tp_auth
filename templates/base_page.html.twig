{% extends 'base.html.twig' %}

{% block title %}Bienvenue{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="text-center p-6 bg-white rounded-lg shadow-lg">
        {% if app.user %}
            <h1 class="text-2xl font-bold mb-4">Bienvenue, {{ app.user.userIdentifier }} !</h1>
            <p class="text-gray-600 mb-6">Vous êtes connecté avec succès.</p>
            <a href="{{ path('app_logout') }}" class="bg-red-500 text-white py-2 px-4 rounded-lg hover:bg-red-600">
                Se déconnecter
            </a>
        {% else %}
            <h1 class="text-2xl font-bold mb-4">Bienvenue !</h1>
            <div class="space-y-4">
                <a href="{{ path('app_login') }}" class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600">
                    Se connecter
                </a>
                <a href="{{ path('app_register') }}" class="bg-green-500 text-white py-2 px-4 rounded-lg hover:bg-green-600">
                    S'inscrire
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
